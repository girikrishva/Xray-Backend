            console.log(bu_dbup)
            var bu_sbup_data= {
                labels: Object.keys(bu_sbup),
                datasets: [
                    {
                        fillColor: "blue",
                        strokeColor: "rgba(220,220,220,1)",
                        data: Object.values(bu_sbup),
                        axis: 1,
                        title: "2012"
                    }
                ]
            }

            var bu_dbup_data= {
