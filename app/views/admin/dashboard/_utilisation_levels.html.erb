<script>
    $(document).ready(function () {
    bu_responce  = ajax_call("/admin/api/utilization_by_business_units_panel_data?cache_refresh=yes")
    bu_data=[]
    $.each(Object.keys(bu_responce), function( index, bu ) {
        li={}
        li.fillColor="red"
        li.strokeColor="rgba(220,220,220,1)"
